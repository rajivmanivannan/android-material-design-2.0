<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--Shape-->

  <!-- For small components, such as Buttons and Chips -->
  <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
    <!-- Value applicable to all four sides (dp value) -->
    <item name="cornerSize">@dimen/app_small_component_corner_radius</item>
    <!-- Shape applicable to all four sides(rounded, cut) -->
    <item name="cornerFamily">rounded</item>


    <!-- Following will take values to the specified side only -->

    <!--
    <item name="cornerFamily">rounded</item>
    <item name="cornerFamilyTopLeft">cut</item>
    <item name="cornerFamilyTopRight">cut</item>
    <item name="cornerFamilyBottomRight">rounded</item>
    <item name="cornerFamilyBottomLeft">rounded</item>
    <item name="cornerSizeTopLeft">0dp</item>
    <item name="cornerSizeTopRight">0dp</item>
    <item name="cornerSizeBottomRight">0dp</item>
    <item name="cornerSizeBottomLeft">0dp</item> -->
  </style>

  <!-- For medium components, such as Cards ,Dialog-->
  <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">@dimen/app_medium_component_corner_radius</item>
  </style>

  <!-- For large components, such as Bottom Sheets -->
  <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
    <item name="cornerFamily">rounded</item>
    <item name="cornerSize">@dimen/app_large_component_corner_radius</item>
  </style>

  <!--ShapeAppearance overlay for components which can be 'marked' by rounding their top left -->
  <!--corner - ie. email cards which have been starred-->
  <style name="ShapeAppearanceOverlay.App.MediumComponent.Marked" parent="">
    <item name="cornerSizeTopLeft">@dimen/app_small_component_corner_radius</item>
  </style>

  <dimen name="app_small_component_corner_radius">8dp</dimen>
  <dimen name="app_medium_component_corner_radius">12dp</dimen>
  <dimen name="app_large_component_corner_radius">18dp</dimen>

</resources>