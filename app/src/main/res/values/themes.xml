<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.MDC2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <!-- Primary brand color. -->
    <!-- The primary brand color of your app, used most predominantly in theming -->
    <item name="colorPrimary">@color/purple_500</item>
    <!--A lighter/darker variant of your primary brand color, used sparingly in theming -->
    <item name="colorPrimaryVariant">@color/purple_700</item>
    <!-- The color used for elements displayed on top of your primary colors
   (eg. Text and icons, often white or semi-transparent black depending on accessibility) -->
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand color. -->
    <!-- The secondary brand color of your app, used mostly as an accent for certain
    widgets that need to stand out -->
    <item name="colorSecondary">@color/teal_200</item>
    <!--A lighter/darker variant of your secondary brand color, used sparingly in theming  -->
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <!--The color used for elements displayed on top of your secondary colors -->
    <item name="colorOnSecondary">@color/black</item>

    <!-- The color used for errors (often a shade of red) -->
    <item name="colorError">@color/error</item>
    <!-- The color used for elements displayed on top of your error color -->
    <item name="colorOnError">@color/on_error</item>
    <!-- The color used for surfaces (i.e. Material “sheets”)-->
    <item name="colorSurface">@color/surface</item>
    <!-- The color used for elements displayed on top of your surface color -->
    <item name="colorOnSurface">@color/on_surface</item>
    <!-- The color behind all other screen content -->
    <item name="android:colorBackground">@color/background</item>
    <!-- The color used for elements displayed on top of your background color -->
    <item name="colorOnBackground">@color/on_background</item>
    <!-- Background color show up when you opened a dialog / Bottom sheet -->
    <item name="scrimBackground">@color/white_50_alpha_060</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    <!-- Customize your theme here. -->

    <!--Shapes-->
    <!-- For small components, such as Buttons and Chips -->
    <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    <!-- For medium components, such as Cards ,Dialog-->
    <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    <!-- For large components, such as Bottom Sheets -->
    <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>

    <!--Typography-->
    <item name="textAppearanceHeadline2">@style/TextAppearance.App.Headline2</item>
    <item name="textAppearanceHeadline3">@style/TextAppearance.App.Headline3</item>
    <item name="textAppearanceHeadline4">@style/TextAppearance.App.Headline4</item>
    <item name="textAppearanceHeadline5">@style/TextAppearance.App.Headline5</item>
    <item name="textAppearanceHeadline6">@style/TextAppearance.App.Headline6</item>
    <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
    <item name="textAppearanceSubtitle2">@style/TextAppearance.App.Subtitle2</item>
    <item name="textAppearanceBody1">@style/TextAppearance.App.Body1</item>
    <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
    <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
    <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
    <item name="textAppearanceOverline">@style/TextAppearance.App.Overline</item>

    <!--Styles-->
    <item name="bottomAppBarStyle">@style/Widget.MaterialComponents.BottomAppBar.PrimarySurface
    </item>
    <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
  </style>

  <style name="Theme.MDC2.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.MDC2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.MDC2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>